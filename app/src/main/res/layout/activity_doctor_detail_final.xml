<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".doctor_detail_final">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar57"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Medical Tourism"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/don"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/item_img"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DR.Shubha"
                            android:padding="4dp"
                            android:layout_margin="4dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/final_doctor_name"

                            android:textColor="@android:color/black"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:padding="4dp"
                            android:gravity="center"

                            android:layout_margin="12dp"
                            android:text="16 years exp"
                            android:id="@+id/final_doctor_exp"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_margin="2dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/final_doctor_sp"
                        android:text="Gynaelogist in"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:layout_margin="2dp"
                        android:id="@+id/final_doctor_addr"
                        android:text="mFine select Ganganagar,Bangalore"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/g"
                            android:layout_margin="4dp"
                            android:padding="2dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MY Education"
                            android:padding="2dp"
                            android:textSize="18dp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/black"

                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"

                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/final_txt_0"
                        android:text="MBBS"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/final_txt_1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:text="-Bangalore Medical College and Reserch Institute,Bangolore,1988"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:id="@+id/final_txt_2"
                        android:textColor="@android:color/black"
                        android:text="MD-Obstetrics and Gynaecology"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/final_txt_3"
                        android:text="-Bangalore Medical College and Reserch Institute,Bangolore,1994"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:id="@+id/final_txt_4"
                        android:textColor="@android:color/black"
                        android:text="MD-Obstetrics and Gynaecology"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:visibility="gone"
                        android:id="@+id/final_txt_5"
                        android:text="-Bangalore Medical College and Reserch Institute,Bangolore,1994"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:id="@+id/final_txt_6"
                        android:textColor="@android:color/black"
                        android:text="MD-Obstetrics and Gynaecology"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/final_txt_7"
                        android:text="-Bangalore Medical College and Reserch Institute,Bangolore,1994"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="18dp"
                        android:text="Additional specialisations"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/final_doctor_additional"
                        android:text="Obstetrics and Gynaecology"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:src="@drawable/lang"
                      android:layout_margin="4dp"
                      android:padding="2dp"
                      />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"

                      android:textSize="18dp"
                      android:textColor="@android:color/black"
                      android:text="I can speak"
                      />

              </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="2dp"

                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/final_doctor_lang"
                        android:layout_height="wrap_content"
                        android:text="English,\nkannada"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>