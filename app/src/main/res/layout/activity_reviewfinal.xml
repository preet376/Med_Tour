<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".reviewfinal">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar122"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Medical Tourism"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:textSize="17dp"
        android:id="@+id/tmyreview"
        android:text="Your review"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/myreview"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/person"
                android:scaleType="centerCrop" />

            <RatingBar
                android:id="@+id/arating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="5"
                android:rating="5"
                android:scaleX=".8"

                android:scaleY=".8"
                android:layout_marginTop="50dp" />

            <!--            <RatingBar-->
            <!--                android:id="@+id/ratingBar"-->
            <!--                android:isIndicator="false"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="50dp"-->
            <!--                android:layout_marginLeft="20dp"/>-->

            <TextView
                android:id="@+id/aname"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Adesh"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                style="bold"
                android:layout_toRightOf="@+id/profile"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/popmenu"
                android:background="@android:color/white"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/aname"
                android:src="@drawable/vert" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:id="@+id/adate"
                android:layout_toRightOf="@id/arating"
                android:text="5/12/2020"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:id="@+id/areview"
                android:text="It's awesome app"
                android:textSize="15dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:textSize="17dp"
        android:text="Reviews and Rating"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerre"
        android:layout_weight="1"
        android:background="#FAF6F6"
        android:layout_below="@id/toolbar122"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/recyclerre"
        android:elevation="3dp"
        android:id="@+id/ereview"
        app:cardBackgroundColor="#EF6C63"
        android:layout_margin="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="0.0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/rereview"

                    android:padding="10dp"
                    android:hint="Add a feedback"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/search_background"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="post"
                    android:src="@drawable/snd"

                    android:id="@+id/rebtn"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>